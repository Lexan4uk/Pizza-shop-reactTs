{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@images/*": [
                "images/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@fonts/*": [
                "fonts/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@globalStyles/*": [
                "globalStyles/*"
            ],
            "@scripts/*": [
                "scripts/*"
            ],
            "@apiAl/*": [
                "api/*"
            ],
            "@types/*": [
                "types/*"
            ]
        },
        "target": "ES6",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}